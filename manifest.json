{
  "name": "Passable",
  "version": "0.8",
  "manifest_version": 2,
  "description": "Secure once. Write never.",
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "background": { "scripts": [
    "helpers/keycodes.js",
    "helpers/sha1.min.js",
    "js/tabs.js",
    "js/background.js"
  ]},
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/popup.html"
  },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "helpers/keycodes.js",
        "helpers/sha1.min.js",
        "js/content_script.js"
      ]
    }
  ],
  "icons": { 
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png" 
  },
  "incognito": "spanning"
}
